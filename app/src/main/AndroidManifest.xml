<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ais777">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ais777">

        <!-- Экран входа: главный LAUNCHER -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Экран регистрации -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Главный экран со списком паролей -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Экран добавления нового пароля -->
        <activity
            android:name=".AddPasswordActivity"
            android:exported="false" />

        <!-- Экран просмотра полного пароля -->
        <activity
            android:name=".ViewPasswordActivity"
            android:exported="false" />

    </application>
</manifest>